<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Base.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <BitmapImage x:Key="CameraImage" UriSource="../Resources/camera-light.png" />

    <Color x:Key="{x:Static adonisUi:Colors.ForegroundColor}">#d5d5d5</Color>
    <Color x:Key="NavButtonBackground">#1f2029</Color>
    <Color x:Key="NavButtonHoverBackground">#2a2b34</Color>

    <SolidColorBrush x:Key="TextColor" Color="{StaticResource {x:Static adonisUi:Colors.ForegroundColor}}" />
    <SolidColorBrush x:Key="AccentTextColor" Color="#7facff" />
    <SolidColorBrush x:Key="SeparatorColor" Color="{StaticResource {x:Static adonisUi:Colors.Layer3BorderColor}}" />
    <SolidColorBrush x:Key="PanelBackgound" Color="{StaticResource {x:Static adonisUi:Colors.Layer0BackgroundColor}}" />
    <!-- SolidColorBrush x:Key="SuccessBackground" Color="{StaticResource {x:Static adonisUi:Colors.Layer3BorderColor}}" /-->
    <SolidColorBrush x:Key="SuccessBackground" Color="#00661c" />
    <SolidColorBrush x:Key="DisabledColor" Color="#5b5b70" />
    <SolidColorBrush x:Key="WindowBorderColor" Color="{StaticResource {x:Static adonisUi:Colors.Layer3BorderColor}}" />
    <SolidColorBrush x:Key="NavButtonBackgroundBrush" Color="{StaticResource NavButtonBackground}" />
    <SolidColorBrush x:Key="NavButtonHoverBackgroundBrush" Color="{StaticResource NavButtonHoverBackground}" />
</ResourceDictionary>